<Calculator>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba:(0.9, 0.1, .3, .5)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint: (1, .09)
        Label:
            markup: True
            text: "[color=ffffff][i]Calculator[/i][/color]"
            font_size: '24dp'
            halign: 'right'
    BoxLayout:
        size_hint:(1, .2)
        TextInput:
            id: disp
            text: '0'
            font_size: 20
            multiline: False
            halign: 'right'
            focus: True
    BoxLayout:
        padding: 10
        GridLayout:
            cols: 4
            Button:
                id:clear
                text: 'CE'
                on_press: root.clearscreen()
                on_release: root.changecolor()
            Button:
                text: 'C'
                on_press: root.clearscreen()
            Button:
                text: 'DEL'
                on_press: root.deleteback()
            Button:
                text: '/'
                on_press: root.signs('/')
            Button:
                id: btn
                text: '7'
                on_press: root.button_press(7)
            Button:
                id: btn
                text: '8'
                on_press: root.button_press(8)
            Button:
                id: btn
                text: '9'
                on_press: root.button_press(9)
            Button:
                id: btn
                text: 'X'
                on_press: root.signs('*')
            Button:
                id: btn
                text: '4'
                on_press: root.button_press(4)
            Button:
                id: btn
                text: '5'
                on_press: root.button_press(5)
            Button:
                id: btn
                text: '6'
                on_press: root.button_press(6)
            Button:
                text: '-'
                on_press: root.signs('-')
            Button:
                id: btn
                text: '1'
                on_press: root.button_press(1)
            Button:
                id: btn
                text: '2'
                on_press: root.button_press(2)
            Button:
                id: btn
                text: '3'
                on_press: root.button_press(3)
            Button:
                text: '+'
                on_press: root.signs('+')
            Button:
                text: '+/-'
                on_press: root.plusminus()
            Button:
                id: btn
                text: '0'
                on_press: root.button_press(0)
            Button:
                text: '.'
                on_press: root.dot()
            Button:
                background_normal: ''
                background_color: [.7, 0, .5, .5]
                text: '='
                on_press: root.equalto()
            
